<div class="container" style="background:lightgrey; border:1px solid black; border-radius:15px; width:75%; height:900px">
<h1>Articles</h1>
<button class="btn"><%= link_to 'New article', new_article_path %></button>

    
    <th colspan="3"></th>
  
 
  <% @articles.each do |article| %>
    <div class="container">
      <strong><%= link_to article.title, article_path(article) %></strong>
      <%= article.text %>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </div>
  <% end %>

</div>
