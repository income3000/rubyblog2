<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><button class="btn"><%= link_to 'Show', article_path(article) %></button></td>
      <td><button class="btn"><%= link_to 'Edit', edit_article_path(article)%></button></td>
    </tr>
    
  <% end %>
</table>
<button class="btn"><%= link_to 'Back', articles_path %></button>
<button class="btn"><%= link_to 'New Article', new_article_path %></button>